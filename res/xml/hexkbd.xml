<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:keyHeight="8%p">
<!--
    android:horizontalGap="0.50%p"
    android:verticalGap="0.50%p"
    NOTE When we add a horizontalGap in pixels, this interferes with keyWidth in percentages adding up to 100%
    NOTE When we have a horizontalGap (on Keyboard level) of 0, this make the horizontalGap (on Key level) to move from after the key to before the key... (I consider this a bug) 
 -->
     <Row>
        <Key android:codes="-3"    android:keyLabel="CANCEL" android:keyWidth="25%p" />
        <Key android:codes="-5"    android:keyLabel="BACKSPACE" android:keyWidth="25%p" android:isRepeatable="true" android:horizontalGap="50%p"/>
    </Row>
    <Row>
        <Key android:codes="65"    android:keyLabel="A"  android:keyEdgeFlags="left"/>
        <Key android:codes="66"    android:keyLabel="B"  />
        <Key android:codes="67"    android:keyLabel="C"  />
        <Key android:codes="68"    android:keyLabel="D"  />
        <Key android:codes="69"    android:keyLabel="E"  />
        <Key android:codes="70"    android:keyLabel="F"  />
        <Key android:codes="71"    android:keyLabel="G"  />
        <Key android:codes="72"    android:keyLabel="H"  />
        <Key android:codes="73"    android:keyLabel="I"  />
        <Key android:codes="74"    android:keyLabel="J"  android:keyEdgeFlags="right"/>
    </Row>
    <Row>
        <Key android:codes="75"    android:keyLabel="K"  android:keyEdgeFlags="left"/>
        <Key android:codes="76"    android:keyLabel="L"  />
        <Key android:codes="77"    android:keyLabel="M"  />
        <Key android:codes="78"    android:keyLabel="N"  />
        <Key android:codes="79"    android:keyLabel="O"  />
        <Key android:codes="80"    android:keyLabel="P"  />
        <Key android:codes="81"    android:keyLabel="Q"  />
        <Key android:codes="82"    android:keyLabel="R"  />
        <Key android:codes="83"    android:keyLabel="S"  />
        <Key android:codes="84"    android:keyLabel="T"  android:keyEdgeFlags="right"/>
    </Row>
    <Row>
        <Key android:codes="85"    android:keyLabel="U"  android:keyEdgeFlags="left"/>
        <Key android:codes="86"    android:keyLabel="V"  />
        <Key android:codes="87"    android:keyLabel="W"  />
        <Key android:codes="88"    android:keyLabel="X"  />
        <Key android:codes="89"    android:keyLabel="Y"  />
        <Key android:codes="90"    android:keyLabel="Z"  />
        <Key android:codes="44"    android:keyLabel=","  />
        <Key android:codes="39"    android:keyLabel="'"  />
        <Key android:codes="46"    android:keyLabel="."  />
        <Key android:codes="45"    android:keyLabel="-"  android:keyEdgeFlags="right"/>
    </Row>
    <Row>
        <Key android:codes="32"    android:keyLabel="Space" android:keyWidth="25%p" android:horizontalGap="37.5%p"/>
    </Row>
    <Row>
        <Key android:codes="-4"    android:keyLabel="Done" android:keyWidth="25%p" android:horizontalGap="75%p" />
    </Row>
</Keyboard>